<h1>Editando: {{book.nomeL}}</h1>

<form action="/books/update" method="post" class="form">
<input type="hidden" name="id" value="{{book.id}}">
     <div class="form-control">
        <label for="nomeL">Título do livro:</label>
        <input type="text" name="nomeL" value="{{book.nomeL}}">
    </div>
    <div class="form-control">
        <label for="autor">Autor:</label>
        <input type="text" name="autor" value="{{book.autor}}">
    </div>
    <div class="form-control">
        <label for="preco">Preço:</label>
        <input type="text" name="preco" value="{{book.preco}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if book.capaDura}}
            <input type="checkbox" name="capaDura" checked>
            {{else}}
            <input type="checkbox" name="capaDura">
        {{/if}}
        
        <label for="capaDura">Capa dura?</label>
    </div>
    <div class="form-control">
        <input type="submit" value="Editar">
    </div>
</form>